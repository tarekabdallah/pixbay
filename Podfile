  pod 'RxCocoa', '~> 5.1.1'
  pod 'Kingfisher', '~> 5.13'
  pod 'Keyboard+LayoutGuide', '~> 1.6.0'
  pod 'NVActivityIndicatorView', '~> 4.8.0'
  pod 'SwiftLint', '~> 0.39.2'
  pod 'CryptoSwift', '~> 1.3.1'
  pod 'DropDown', '~> 2.3.13'
end

target 'PixbayApp' do
  shared_pods
end

target 'PixbayAppTests' do
  shared_pods
end
